{{ template "base" . }}

{{ define "content" }}
<div class="container">
  <div class="row">
    <div class="col">
      <h1>This is the about page</h1>

      <p>This is some text. It is very fine text!</p>

      <p>This came from the template: {{ index .StringMap "test" }}</p>

      <p>
        {{ if ne (index .StringMap "remote_ip") "" }}
        Your remote IP address is {{ index .StringMap "remote_ip"}}
        {{ else }}
        I don't know your remote IP address. Please visit the <a href="/">Home page</a> so I can set it.
        {{end}}
      </p>
    </div>
  </div>
</div>
{{ end }}
